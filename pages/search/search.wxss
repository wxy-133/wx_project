/* pages/search/search.wxss */
page{
    background-color:#dedede;
  padding:20rpx;
}
.search_row{
  height:60rpx;
  display:flex;
}
.search_row input{
flex:1!important;
height:100%;
background-color:white;
padding-left:30rpx;
}
.search_row button:not([size='mino']){
width:110rpx!important;
height:100%;
font-size:26rpx;
padding:0;
line-height:60rpx;
}
.search_content {
  margin-top:30rpx;
}
.search_content .search_item{
  background:white;
  font-size:26rpx;
  padding:15rpx 10rpx;
  border-bottom:1rpx solid #ccc;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}