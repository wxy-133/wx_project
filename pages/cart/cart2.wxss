.foot_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
  border-top: 1px solid #ccc;
}
.foot_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot_tool .total_price_warp {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.foot_tool .total_price_warp .total_price .total_price_text {
  color: var(--thtmeColor);
  font-size: 32rpx;
}
.foot_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--thtmeColor);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
